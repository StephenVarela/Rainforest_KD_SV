<h1><%= link_to("Home Page", products_url)  %></h1>

<div class="product">
  <h2> <%= link_to("#{@product.name}", product_url(@product)) %> | Only: <%= @product.price_in_dollars %></h2>
  <p> Description: <%= @product.description %><p>
</div>

<h3><%= link_to("Edit", edit_product_url) %></h3> |<h3><%= link_to("Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this picture?"}) %></h3>

<% @product.reviews.each do |review| %>
  <p>Written at: <%= review.updated_at %></p>
  <p><%= review.comment %></p>
<% end %>

<h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
