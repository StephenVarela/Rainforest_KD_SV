<ul>
<% @product.errors.full_messages.each do |error| %>
  <li>
    <%= "#{error}" %>
  </li>
<% end %>
</ul>

<%= form_for @product  do |f| %>
  <div class="">
    <%= f.text_field :name %>
  </div>
  <div class="">
    <%= f.text_area :description, size: "60x12" %>
  </div>
  <div class="">
    <%= f.number_field :price_in_cents %>
  </div>
  <div class="">
    <%= f.submit "Create" %>
  </div>
<% end %>
